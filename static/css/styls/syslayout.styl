
@import fonts
@import colors
@import components

topnav_height = 52px

body
	padding-top topnav_height
	font-size 16px
	font-family font_light

a
	color principal
	cursor pointer

	&:hover
		color principal

.pull
	float left

.push
	float right


.clickable
	&:active
		background-color principal
		color white
		text-decoration none

	&:active *
		color white


//  ---------- About Text   --------
.green
	color principal

.black 
	color neutral

.red
	color red

.text-center
	text-align center

.standout
	font-size 1.25em
	font-family font_light
	margin-top 0.6em

.standout-more
	font-size 1.5em
	margin-top 0.5em
	margin-bottom 0.5em

.standout-more-more
	font-size 2.8em

.help-text
	font-size 0.9em

// ----------- About spaces --------------
.without-margin
	margin 0px

.separate 	
	margin-top 1.2em

.tiny-separate
	margin-top 0.3em

.navbar-default 
	background-color white
	border-bottom 0px
	box-shadow 0px 1px 2px rgba(0,0,0,0.15)

.navbar-header 
	font-family font_light
	margin-left topnav_height

.navbar-brand
	font-size 1.4em
	color principal !important

.squash
	padding 0px 7em


.lateral
	border-left 1px solid lighten(neutral, 50%)
	font-size 0.8em
	letter-spacing 0
	padding 0em 0.3em
	text-transform none

.navbar-right
	line-height topnav_height

	ul
		margin 0px
		padding 0px

		li
			padding 0em 1em

.left-border-dotted
	border-left 1px dotted lighten(neutral, 80%)

.stop-border
	border-right 3px solid principal

	
.light
	font-family font_light

.box-logo
	background-color principal
	width topnav_height	
	position absolute
	top 0
	bottom 0
	left 0
	padding 0.4em

	img
		width 38px

.table
	font-family font_light

	th		
		color principal

	& > tbody > tr > td 
		border-bottom 1px dotted #eee
		border-top @border-bottom

	tr
		border-right 4px solid transparent
		border-left 4px solid transparent
		&:hover
			background-color #eee
			border-right 4px solid principal
			border-left 4px solid principal			
		

.main
	padding-left 5em
	padding-top 2.5em

// Changes on bootstrap components

.progress
	background-color dark_grey

// Especificos para campos de informacion

.display-code
	font-weight bolder
	letter-spacing 0.08em