
@import fonts
@import colors

topnav_height = 52px

body
	padding-top topnav_height
	font-size 16px

h1
	margin 0px	
	font-family font_light
	letter-spacing 0.1em
	text-transform uppercase

a
	color principal
	cursor pointer

	&:hover
		color principal


.clickable
	&:active
		background-color principal
		color white
		text-decoration none

	&:active *
		color white

.green
	color principal

.black 
	color neutral

.sidebar
	position fixed
	top 51px
	bottom 0
	left 0
	z-index 1000
	display block	
	overflow-x hidden
	overflow-y auto 	
	color neutral
	font-family font_light
	padding 0px

	li
		color neutral	

		a
			padding-left 2.2em
			color neutral !important

			&:hover				
				color neutral
				border-right 4px solid lighten(neutral, 70%)

			&.active
				background-color #eee
				border-right 4px solid principal
				color principal !important

			&:active
				border-right 2px solid principal
				box-shadow inset 1px 1px 2px rgba(0,0,0,0.25)
				transform 
				
				

		i
			padding-right 2em



	.nav-sidebar
		
		padding-top 2.5em

.navbar-default 
	background-color white
	border-bottom 0px
	box-shadow 0px 1px 2px rgba(0,0,0,0.15)

.navbar-header 
	font-family font_light
	margin-left topnav_height

.navbar-brand
	font-size 1.4em
	color principal !important


.lateral
	border-left 1px solid lighten(neutral, 50%)
	font-size 0.8em
	letter-spacing 0
	padding 0em 0.3em
	text-transform none

.navbar-right
	line-height topnav_height

	ul
		margin 0px
		padding 0px

		li
			padding 0em 1em

.left-border-dotted
	border-left 1px dotted lighten(neutral, 80%)

.stop-border
	border-right 3px solid principal

	
.light
	font-family font_light

.box-logo
	background-color principal
	width topnav_height	
	position absolute
	top 0
	bottom 0
	left 0
	padding 0.4em

	img
		width 38px

.main
	padding-left 5em
	padding-top 2.5em